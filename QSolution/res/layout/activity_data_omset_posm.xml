<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <RelativeLayout
                android:id="@+id/form1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <LinearLayout
                    android:id="@+id/layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.9"
                        android:orientation="vertical" >

                        <ScrollView
                            android:id="@+id/ScrollViewOutlet"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:fadingEdge="none"
                            android:fillViewport="true" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical" >

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="5dp" >

                                    <TextView
                                        android:id="@+id/lblId"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Outlet Id"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/lblName"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Outlet Name"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:padding="5dp" >

                                    <TableLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" >

                                        <TableRow
                                            android:id="@+id/tableRow5"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="2dip" >

                                            <TextView
                                                android:id="@+id/TextView02"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Omset Kategori" >
                                            </TextView>

                                            <EditText
                                                android:id="@+id/txtOmzet"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:hint="Omset /minggu"
                                                android:inputType="numberDecimal"
                                                android:maxLength="9" />
                                        </TableRow>
                                        
                                        <TableRow
                                            android:id="@+id/tableRow5"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="2dip" >

                                            <TextView
                                                android:id="@+id/lblSubkatagori"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Sub Katagori" />

                                            <Spinner
                                                android:id="@+id/spnSubKatagori"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:text="" />
                                        </TableRow>

                                        <TableRow
                                            android:id="@+id/tableRow5"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="2dip" >

                                            <TextView
                                                android:id="@+id/lblCompanySku"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Company" >
                                            </TextView>

                                            <Spinner
                                                android:id="@+id/spnCompany"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:text="" />
                                        </TableRow>

                                        <TableRow
                                            android:id="@+id/tableRow5"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="2dip" >

                                            <TextView
                                                android:id="@+id/lblBrandSku"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Brand" />

                                            <Spinner
                                                android:id="@+id/spnBrand"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:text="" />
                                        </TableRow>

                                        <TableRow
                                            android:id="@+id/tableRow5"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="2dip" >

                                            <TextView
                                                android:id="@+id/lblBranded"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Posm Outlet" />

                                            <Spinner
                                                android:id="@+id/spnPosm"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:text="" />
                                        </TableRow>

                                        <TableRow
                                            android:id="@+id/tableRow5"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="2dip" >

                                            <TextView
                                                android:id="@+id/lblBranded"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Jumlah" />

                                            <EditText
                                                android:id="@+id/txtJumlah"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:inputType="numberDecimal"
                                                android:maxLength="3"
                                                android:text="" />
                                        </TableRow>

                                        <Button
                                            android:id="@+id/btnTambahPosm"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:padding="5dp"
                                            android:text="Tambahan POSM Outlet" />
                                    </TableLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </ScrollView>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/form2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.9"
                        android:orientation="vertical" >

                        <ListView
                            android:id="@+id/lsPosm"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:horizontalSpacing="5dp"
                            android:numColumns="auto_fit"
                            android:scaleType="fitXY"
                            android:stretchMode="columnWidth"
                            android:verticalSpacing="5dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</TabHost>